@model IEnumerable<PetStore.Services.Models.Product.ListAllProductsServiceModel>

@{
    ViewData["Title"] = "All";
}

<h1>ViewData["Title"]</h1>

<div class="container">
    <div class="row">
        <div class="col-12 col-sm-8 col-lg-5">
            
            <ul class="list-group">
           @foreach(var product in Model)
             {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    @product.Name - (@product.Price.ToString("f2"))$

                    <div class="image-parent">
                        <img src="@product.ImageURL" class="img-fluid" alt="quixote">
                    </div>
                    <a class="btn btn-primary" asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">
                    </a>
                </li>
             }
            </ul>
        </div>
    </div>
</div>